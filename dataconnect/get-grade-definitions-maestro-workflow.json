{
  "name": "get-grade-definitions-maestro-workflow",
  "parameters": [
    {
      "name": "ethosApiKey",
      "type": "string",
      "sensitive": true
    },
    {
      "name": "schemeId",
      "type": "string",
      "required": true
    }
  ],
  "apiDefinition": {
    "authType": "userToken",
    "httpVerb": "GET"
  },
  "pipeline": [
    "Ethos Proxy Get",
    "JavaScript Transform"
  ],
  "segments": {
    "Ethos Proxy Get": {
      "class": "ethosProxyGet",
      "config": {
        "resource": "grade-definitions",
        "acceptVersions": [
          "6"
        ],
        "cache": false,
        "ignoreErrors": false
      }
    },
    "JavaScript Transform": {
      "class": "JavaScriptTransform",
      "config": {
        "pushUndefined": true,
        "stopOnError": false,
        "draft": false,
        "code": "function transform (message, context) {\n  \n  message.payload = message.payload\n    .filter(grade => grade.scheme.id === context.schemeId && grade.credit === 'full')\n    .map(grade => ({\n      id: grade.id,\n      code: grade.grade.value\n    }));\n  // Put your code here.\n  return message;\n}\n"
      }
    }
  }
}